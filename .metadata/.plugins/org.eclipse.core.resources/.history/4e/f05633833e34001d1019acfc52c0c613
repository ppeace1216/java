package sec3;

public class Loop8 {

	public static void main(String[] args) {
		// 이중for문을 활용하여 아래와 같은 형태의 구구단을 출력
/*
 * 2*1=2	3*1=3	......
 * 2*2=4	3*2=6	......
 * .......................
 * 2*9=18	
 */
		int a = 0;
		for(a=1;a<10;a++){
			System.out.println("2 * "+a+"  = "+a*2);
		}
		
			
		
	}

}
